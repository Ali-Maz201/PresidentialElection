@model CandidateCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Candidate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Party" class="control-label"></label>
                <input asp-for="Party" class="form-control" />
                <span asp-validation-for="Party" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
                <input asp-for="PhotoFile" accepts="images/jpg, images/jpeg"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

